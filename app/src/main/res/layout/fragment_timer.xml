<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <AutoCompleteTextView
        android:id="@+id/trailAutoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/select_trail"
        android:completionThreshold="1"
        android:inputType="text"
        android:gravity="center"
        android:textSize="30sp"
        android:background="@android:color/transparent"
        android:padding="10dp"
        android:textColor="@color/arrow"/>

    <TextView
        android:id="@+id/elapsedTimeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/init_time"
        android:textAlignment="center"
        android:textColor="@color/arrow"
        android:textSize="85sp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/resetTimeButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_reset"/>

        <ImageView
            android:id="@+id/startStopTimeButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_start" />

        <ImageView
            android:id="@+id/saveTimeButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_save" />
    </LinearLayout>
</LinearLayout>
